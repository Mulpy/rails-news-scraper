<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <% if user_signed_in? %>
      <%= link_to user_news_articles_path, class: "navbar-brand" do %>
        <i class="fa-solid fa-house fa-2xl"></i>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-brand" do %>
        <i class="fa-solid fa-house fa-2xl"></i>
      <% end %>
    <% end %>
    <%= link_to news_article_path(id: 1), class: "navbar-brand" do %>
      <i class="fa-regular fa-calendar-days fa-2xl"></i>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to chatrooms_path, class: "navbar-brand" do %>
        <i class="fa-solid fa-comments fa-2xl"></i>
      <% end %>
      <%= link_to bookmarks_path, class: "navbar-brand" do %>
        <i class="fa-solid fa-bookmark fa-2xl"></i>
      <% end %>
      <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if user_signed_in? %>
      <%= simple_form_for :search, url:  user_news_articles_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <label for="search_query">Search</label>
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
    <% else %>
      <%= simple_form_for :search, url:  news_articles_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <label for="search_query">Search</label>
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
