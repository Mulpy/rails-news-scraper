<div  class="container">
  <div data-controller="toggle">
    <div data-controller="pie">
      <div class="parent">
        <div class="title">
          <h1>News Scraper</h1>
        </div>
      </div>
      <%= render 'search' %>
      <% if params[:search].present? %>
        <div class='d-flex'>
          <%= render 'checkboxes' %>
        </div>
        <div class="parent">
          <div class="results">
            <h3>Showing <%= @articles.length  %> results for "<%= params[:search][:query].split.map(&:upcase).join(' & ')%>"</h3>
          </div>
        </div>
        <div class="d-flex">
          <div>
            <% @articles.each do |article| %>
              <div>
                <%= render 'search_results_card', article: article %>
              </div>
            <% end %>
          </div>
          <div class="container p-5">
            <div>
              <h2>News Ratio</h2>
              <button type="button" class="btn btn-primary"  data-action="onclick->pie#fire">Display News Ratio</button>
              <div class="chart" id="pie">
                <canvas data-pie-target='pie'>
                  <!-- TODO: Display pie chart below -->
                </canvas>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
