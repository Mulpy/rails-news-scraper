<div  class="container">
  <div data-controller="toggle">
    <div data-controller="pie">
      <div class="parent">
        <div class="title">
          <h1>News Scraper</h1>
        </div>
      </div>
      <%= render 'search' %>
      <% if params[:search].present? %>
        <div class='d-flex'>
          <%= render 'checkboxes' %>
        </div>
        <div class="parent">
          <div class="results">
            <h3>Showing results for "<%= params[:search][:query].split.map(&:upcase).join(' & ')%>"</h3>
          </div>
        </div>
        <div class="d-flex">
          <div>
            <% @articles.each do |article| %>
              <div>
                <%= render 'search_results_card', article: article %>
              </div>
            <% end %>
          </div>
          <div class="container p-5">
            <div>
              <h2>Sources Breakdown</h2>
              <h3>Total Articles: <strong><%= @articles.length %></strong></h3>
              <ul>
                <li>BBC: <%= @bbc_articles.count %> articles</li>
                <li>Politico: <%= @politico_articles.count %> articles</li>
                <li>Al Jazeera: <%= @al_jazeera_articles.count %>
                  articles</li>
                <li>NYT: <%= @nyt_articles.count %> articles</li>
                <li>Japan Times: <%= @japan_times_articles.count %> articles</li>
              </ul>
              <% @ruby_bbc = @bbc_articles.count %>
              <% @ruby_politico = @politico_articles.count %>
              <% @ruby_al_jazeera = @al_jazeera_articles.count %>
              <% @ruby_nyt = @nyt_articles.count %>
              <% @ruby_japan_times = @japan_times_articles.count %>
              <%= javascript_tag do %>
                const jsBbc = <%= @ruby_bbc.to_json %>;
                const jsPolitico = <%= @ruby_politico.to_json %>;
                const jsAlJazeera = <%= @ruby_al_jazeera.to_json %>;
                const jsNyt = <%= @ruby_nyt.to_json %>;
                const jsJapanTimes = <%= @ruby_japan_times.to_json %>;
              <% end %>
              <button type="button" class="btn btn-primary"  data-action="click->pie#fire">Display News Ratio</button>
              <div class="chart" id="pie">
                <canvas data-pie-target='pie'>
                  <!-- TODO: Display pie chart below -->
                </canvas>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
